    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug ${fileDirname}\\${fileBasenameNoExtension}.exe",
            "type": "cppvsdbg",
            "request": "launch",
            /*
            use the build-fixed-string-poc.cmd
            */
            "program": "${fileDirname}\\out\\${fileBasenameNoExtension}.exe",
            /* the UBENCH arg */
            "args": ["--confidence=20"],
            "stopAtEntry": true,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "internalConsole"
        },
        {
            "name": "COLLECTOR ONLY",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${fileDirname}\\..\\out\\${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "internalConsole"
        }
    ]
}