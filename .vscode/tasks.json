{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "CLANG-CL",
			/* 
			please change this to your local clang-cl full path 
			or your local GCC path
			*/
			"command": "D:\\PROD\\programs\\Microsoft Visual Studio\\2019\\Community\\VC\\Tools\\Llvm\\x64\\bin\\clang-cl.exe",
			"args": [
				"/Zi",
				"/std:c++17", /* c++20 is necessary for nonstd::string_view operator "" _sv to be constexpr, but clang-cl 11.0 no can do */
				"/D_HAS_EXCEPTIONS=0",
				"/nologo",
/*				"/Fe:",
				"${fileDirname}\\${fileBasenameNoExtension}.exe", */
				"${file}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: clang-cl.exe"
		}
	]
}